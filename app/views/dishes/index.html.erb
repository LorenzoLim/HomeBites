<h1 class="title other-title">~ <%= @cuisine %> Dishes ~</h1>

<div class="container">
  <div class="row">
    <% @dishes.each do |dish| %>
      <div class="col-sm-3">
          <%= link_to image_tag(dish.image, class: 'img-thumbnail img-fluid food'), dish %>
          <%= link_to 'Add To Order', order_path(dish_id: dish.id, qty: 1), method: :post %>
      </div>
    <% end %>
  </div>
</div>
