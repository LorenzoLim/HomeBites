<p id="notice"><%= notice %></p>

<h1>Dishes</h1>

<% if user_signed_in? %>

  <%= link_to('Logout', destroy_user_session_path, method: :delete) %>

<% else %>

  <%= link_to('Login', new_user_session_path)  %>

<% end %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Cuisine</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dishes.each do |dish| %>
      <tr>
        <td><%= dish.name %></td>
        <td><%= dish.cuisine %></td>
        <td><%= dish.user.name %></td>
        <td><%= image_tag dish.image %></td>
        <td><%= link_to 'Show', dish %></td>
        <td><%= link_to 'Edit', edit_dish_path(dish) %></td>
        <td><%= link_to 'Destroy', dish, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Dish', new_dish_path %>
