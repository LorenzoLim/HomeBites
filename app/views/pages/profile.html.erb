<h1>User#profile</h1>
<p>Find me in app/views/user/profile.html.erb</p>
<%= link_to "Update Account", edit_user_registration_path %>
<%= link_to 'New Dish', new_dish_url  %>

<td><%= @user.name %></td>
<td><%= @user.email %></td>
<td><%= @user.address %></td>
<td><%= @user.role %></td>
<td><%= image_tag @user.image.url %></td>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Cuisine</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dishes.each do |dish| %>
      <tr>
        <td><%= dish.name %></td>
        <td><%= dish.cuisine %></td>
        <td><%= image_tag dish.image %></td>
        <td><%= link_to 'Show', dish %></td>
        <td><%= link_to 'Edit', edit_dish_path(dish) %></td>
        <td><%= link_to 'Destroy', dish, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
