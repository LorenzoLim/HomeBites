<div class="form-container">
  <div class="login-form">
    <h2>Log In</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="">
      <div class="">
        <%= f.email_field :email, autofocus: true, placeholder: 'Email', :class => 'text-input' %>
      </div>

      <div class="">
        <%= f.password_field :password, autocomplete: "off", placeholder: 'Password', :class => 'text-input' %>
      </div>

      <% if devise_mapping.rememberable? -%>
      <div class="checkbox-Rmb-Me">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
      <% end -%>

      <div class="actions">
        <%= f.submit "Log in", class: "btn btn-default" %>
      </div>
    </div>
    <% end %>

    <div class="">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
